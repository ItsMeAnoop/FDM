<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/lblLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="14dp"
                android:padding="5dp"
                android:fontFamily="sans-serif"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toLeftOf="@+id/btn_report_visit"
                    android:text="Visited Details of current month"
                    android:textColor="#000"
                    android:textSize="16sp" />


                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_report_visit"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/appcompat_butoon_height"
                    android:layout_alignParentRight="true"
                    android:text="GET"
                    android:textColor="@android:color/white"
                    android:theme="@style/ButtonStyle" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toLeftOf="@+id/btn_report_pending"
                    android:text="Pending list of current month"
                    android:textColor="#000"
                    android:textSize="16sp" />


                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_report_pending"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/appcompat_butoon_height"
                    android:layout_alignParentRight="true"
                    android:text="GET"
                    android:textColor="@android:color/white"
                    android:theme="@style/ButtonStyle" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toLeftOf="@+id/btn_report_todays_visit"
                    android:text="Today's visits"
                    android:textColor="#000"
                    android:textSize="16sp" />


                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_report_todays_visit"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/appcompat_butoon_height"
                    android:layout_alignParentRight="true"
                    android:text="GET"
                    android:textColor="@android:color/white"
                    android:theme="@style/ButtonStyle" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toLeftOf="@+id/btn_report_schedule"
                    android:text="Scheduled visits in xls"
                    android:textColor="#000"
                    android:textSize="16sp" />


                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_report_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/appcompat_butoon_height"
                    android:layout_alignParentRight="true"
                    android:text="GET"
                    android:textColor="@android:color/white"
                    android:theme="@style/ButtonStyle" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
</ScrollView>